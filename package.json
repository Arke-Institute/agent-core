{
  "name": "@arke-institute/agent-core",
  "version": "1.3.0",
  "description": "Shared infrastructure for Arke agents - Durable Objects, routing, logging, and utilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register/index.d.ts",
      "import": "./dist/register/index.js"
    },
    "./test": {
      "types": "./dist/test/index.d.ts",
      "import": "./dist/test/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@arke-institute/sdk": "^2.3.5",
    "@noble/ed25519": "^2.2.3",
    "hono": "^4.7.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@types/node": "^25.0.9",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.0.0"
  },
  "keywords": [
    "arke",
    "agents",
    "durable-objects",
    "cloudflare-workers"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arke-Institute/agent-core.git"
  }
}
